@model IEnumerable<Ltwhqt.ViewModels.Branch.BranchOrderListItemViewModel>
@{
    ViewBag.Title = "Đơn hàng chi nhánh";
    var statusFilter = ViewBag.StatusFilter as string ?? "all";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h4 mb-1">Branch orders</h2>
        <p class="text-secondary mb-0">POS &amp; online assign cho chi nhánh.</p>
    </div>
    <form method="get" class="d-flex gap-2">
        <select class="form-select" name="status" onchange="this.form.submit()">
            <option value="all" @(statusFilter == "all" ? "selected" : null)>Tất cả</option>
            <option value="pending" @(statusFilter == "pending" ? "selected" : null)>Pending</option>
            <option value="processing" @(statusFilter == "processing" ? "selected" : null)>Processing</option>
            <option value="completed" @(statusFilter == "completed" ? "selected" : null)>Completed</option>
        </select>
    </form>
</div>

<div class="card border-0 shadow-sm">
    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead>
                <tr>
                    <th>Mã đơn</th>
                    <th>Khách</th>
                    <th>Kênh</th>
                    <th>Trạng thái</th>
                    <th>Tổng tiền</th>
                    <th>Ngày</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td class="fw-semibold">@order.OrderCode</td>
                        <td>@order.Customer</td>
                        <td>@order.Channel</td>
                        <td><span class="status-pill @order.Status">@order.Status</span></td>
                        <td>@order.TotalAmount.ToString("c0")</td>
                        <td>@order.CreatedAt:dd/MM HH:mm</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Details", new { id = order.Id })">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
