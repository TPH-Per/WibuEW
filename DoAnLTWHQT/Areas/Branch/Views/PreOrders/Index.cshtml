@model IEnumerable<Ltwhqt.ViewModels.Branch.BranchPreOrderViewModel>
@{
    ViewBag.Title = "Pre-order";
}

<div class="mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h2 class="h4 mb-1">Pre-order queue</h2>
        <p class="text-secondary mb-0">Theo dõi khách đặt trước &amp; lịch hẹn.</p>
    </div>
    <a class="btn btn-outline-primary" href="@Url.Action("Index", "Transfers")">Nhận hàng từ kho</a>
</div>

<div class="row g-4">
    @foreach (var preOrder in Model)
    {
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-start">
                    <div>
                        <div class="text-secondary small">Order</div>
                        <h3 class="h6 mb-1">@preOrder.OrderCode</h3>
                        <div class="fw-semibold">@preOrder.Customer</div>
                        <div class="text-secondary">@preOrder.PickupDateLabel</div>
                        <div class="mt-2">
                            <span class="badge bg-light text-dark text-uppercase">@preOrder.Status</span>
                        </div>
                    </div>
                    <div class="text-end">
                        <div class="text-secondary small">Deposit</div>
                        <div class="h5 mb-0">@preOrder.DepositAmount.ToString("c0")</div>
                    </div>
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var line in preOrder.Lines)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-semibold">@line.ProductName</div>
                                <small class="text-secondary">@line.VariantName</small>
                            </div>
                            <span>x @line.Quantity</span>
                        </li>
                    }
                </ul>
                <div class="card-footer bg-white border-0 text-end">
                    <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Details", new { id = preOrder.Id })">Chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>
