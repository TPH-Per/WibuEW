@model Ltwhqt.ViewModels.Branch.AddTransferDetailViewModel
@{
    ViewBag.Title = "Thêm sản phẩm vào phiếu";
    var transfer = ViewBag.TransferDetail as Ltwhqt.ViewModels.Branch.TransferRequestFullViewModel;
}

@section Styles {
    <link href="@Url.Content("~/wwwroot/css/areas/branch-dashboard.css")" rel="stylesheet" />
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="mb-4">
    <h2 class="h4 mb-1">
        <i class="bi bi-plus-square me-2"></i>Thêm sản phẩm vào phiếu #@Model.TransferId
    </h2>
    <p class="text-secondary mb-0">Chọn sản phẩm và số lượng cần nhập</p>
</div>

<div class="row">
    <!-- Form thêm sản phẩm -->
    <div class="col-md-5 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-plus-circle me-2"></i>Thêm sản phẩm
            </div>
            <div class="card-body">
                @using (Html.BeginForm("AddItems", "Transfers", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.TransferId)

                    <div class="mb-3">
                        <label class="form-label">Sản phẩm <span class="text-danger">*</span></label>
                        @Html.DropDownListFor(m => m.ProductVariantId, Model.ProductVariantOptions, "-- Chọn sản phẩm --", new { @class = "form-select", required = "required" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Số lượng <span class="text-danger">*</span></label>
                        @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", type = "number", min = "1", required = "required", placeholder = "Nhập số lượng" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Ghi chú</label>
                        @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", rows = 2, placeholder = "Ghi chú (tùy chọn)" })
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-plus-lg me-1"></i>Thêm sản phẩm
                    </button>
                }
            </div>
        </div>

        <div class="mt-3">
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Quay lại danh sách
            </a>
            <a href="@Url.Action("Details", new { id = Model.TransferId })" class="btn btn-outline-primary">
                <i class="bi bi-eye me-1"></i>Xem chi tiết phiếu
            </a>
        </div>
    </div>

    <!-- Danh sách sản phẩm đã thêm -->
    <div class="col-md-7">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <i class="bi bi-list-ul me-2"></i>Sản phẩm trong phiếu (@(transfer?.Details?.Count ?? 0) SP)
            </div>
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th class="text-center">SL</th>
                            <th class="text-end">Đơn giá</th>
                            <th class="text-end">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (transfer?.Details == null || !transfer.Details.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">
                                    <i class="bi bi-box-seam fs-3 d-block mb-2"></i>
                                    Chưa có sản phẩm nào
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in transfer.Details)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.ProductName</strong>
                                        <br/>
                                        <small class="text-muted">@item.VariantName (@item.Sku)</small>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">@item.Quantity</span>
                                    </td>
                                    <td class="text-end">@item.Price.ToString("N0") đ</td>
                                    <td class="text-end"><strong>@item.LineTotal.ToString("N0") đ</strong></td>
                                </tr>
                            }
                            <tr class="table-dark">
                                <td colspan="3" class="text-end"><strong>TỔNG CỘNG:</strong></td>
                                <td class="text-end"><strong>@transfer.Details.Sum(d => d.LineTotal).ToString("N0") đ</strong></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
