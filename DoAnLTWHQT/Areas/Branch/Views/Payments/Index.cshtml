@model IEnumerable<Ltwhqt.ViewModels.Branch.BranchPaymentViewModel>
@{
    ViewBag.Title = "Thanh toán chi nhánh";
    var methodFilter = ViewBag.MethodFilter as string ?? "all";
}

<div class="mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h2 class="h4 mb-1">Branch payments</h2>
        <p class="text-secondary mb-0">Đối soát cuối ngày/cuối ca.</p>
    </div>
    <form method="get">
        <select class="form-select" name="method" onchange="this.form.submit()">
            <option value="all" @(methodFilter == "all" ? "selected" : null)>Tất cả phương thức</option>
            <option value="Tiền mặt" @(methodFilter == "Tiền mặt" ? "selected" : null)>Tiền mặt</option>
            <option value="QR" @(methodFilter == "QR" ? "selected" : null)>QR</option>
            <option value="Chuyển khoản" @(methodFilter == "Chuyển khoản" ? "selected" : null)>Chuyển khoản</option>
        </select>
    </form>
</div>

<div class="card border-0 shadow-sm">
    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead>
                <tr>
                    <th>Mã</th>
                    <th>Phương thức</th>
                    <th>Số tiền</th>
                    <th>Trạng thái</th>
                    <th>Thời gian</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var payment in Model)
                {
                    <tr>
                        <td>#@payment.Id</td>
                        <td>@payment.Method</td>
                        <td>@payment.Amount.ToString("c0")</td>
                        <td><span class="badge bg-light text-dark text-uppercase">@payment.Status</span></td>
                        <td>@payment.CreatedAt:dd/MM HH:mm</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
