@model Ltwhqt.ViewModels.Branch.BranchAdjustmentViewModel
@{
    ViewBag.Title = "Điều chỉnh tồn kho chi nhánh";
}

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <h2 class="h5 mb-4">Tạo phiếu điều chỉnh</h2>
        <div class="mb-3">
            <label class="form-label">Variant</label>
            <input class="form-control" value="@Model.Variant" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Số lượng điều chỉnh (+/-)</label>
            <input class="form-control" type="number" value="@Model.Adjustment" />
        </div>
        <div class="mb-3">
            <label class="form-label">Lý do</label>
            <textarea class="form-control" rows="3" placeholder="Kiểm kê lệch, hư hỏng, thiếu hụt...">@Model.Reason</textarea>
        </div>
        <div class="d-flex justify-content-end gap-2">
            <a class="btn btn-light" href="@Url.Action("Detail", new { variantId = Model.VariantId })">Huỷ</a>
            <button class="btn btn-primary" type="button">Xác nhận</button>
        </div>
    </div>
</div>
