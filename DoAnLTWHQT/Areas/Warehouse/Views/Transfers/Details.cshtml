@model Ltwhqt.ViewModels.Admin.WarehouseTransferViewModel
@{
    ViewBag.Title = "Chi tiết phiếu xuất kho";
}

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between mb-3">
            <div>
                <h2 class="h5 mb-1">Transfer #@Model.Id</h2>
                <p class="text-secondary mb-0">Tới: @Model.ToBranch</p>
            </div>
            <span class="badge bg-light text-dark text-uppercase">@Model.Status</span>
        </div>

        <dl class="row mb-0">
            <dt class="col-sm-3">Kho xuất</dt>
            <dd class="col-sm-9">@Model.FromWarehouse</dd>

            <dt class="col-sm-3">Variant</dt>
            <dd class="col-sm-9">@Model.Variant</dd>

            <dt class="col-sm-3">Số lượng</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>

            <dt class="col-sm-3">Ngày tạo</dt>
            <dd class="col-sm-9">@Model.CreatedAt:dd/MM/yyyy HH:mm</dd>
        </dl>
    </div>
</div>
