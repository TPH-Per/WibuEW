@model List<DoAnLTWHQT.warehouse_transfers>

@{
    ViewBag.Title = "Danh Sách Phiếu Chuyển Kho";
    var statusFilter = ViewBag.StatusFilter != null ? ViewBag.StatusFilter.ToString() : "all";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="fa fa-exchange"></i> Phiếu Chuyển Kho</h2>
                <a href="@Url.Action("Create")" class="btn btn-primary">
                    <i class="fa fa-plus"></i> Tạo Phiếu Mới
                </a>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <div class="btn-group" role="group">
                <a href="@Url.Action("Index", new { status = "all" })" 
                   class="btn btn-outline-secondary @(statusFilter == "all" ? "active" : "")">
                    Tất Cả
                </a>
                <a href="@Url.Action("Index", new { status = "Requested" })" 
                   class="btn btn-outline-info @(statusFilter == "Requested" ? "active" : "")">
                    Yêu Cầu
                </a>
                <a href="@Url.Action("Index", new { status = "Approved" })" 
                   class="btn btn-outline-primary @(statusFilter == "Approved" ? "active" : "")">
                    Đã Duyệt
                </a>
                <a href="@Url.Action("Index", new { status = "pending" })" 
                   class="btn btn-outline-warning @(statusFilter == "pending" ? "active" : "")">
                    Chờ Xuất
                </a>
                <a href="@Url.Action("Index", new { status = "Completed" })" 
                   class="btn btn-outline-success @(statusFilter == "Completed" || statusFilter == "completed" ? "active" : "")">
                    Hoàn Thành
                </a>
                <a href="@Url.Action("Index", new { status = "Rejected" })" 
                   class="btn btn-outline-danger @(statusFilter == "Rejected" ? "active" : "")">
                    Từ Chối
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body">
                    @if (!Model.Any())
{
                        <div class="text-center py-5">
                            <i class="fa fa-inbox fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Không có phiếu chuyển kho nào</h5>
                            <a href="@Url.Action("Create")" class="btn btn-primary mt-3">
                                <i class="fa fa-plus"></i> Tạo Phiếu Đầu Tiên
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Từ Kho</th>
                                        <th>Đến Chi Nhánh</th>
                                        <th>Sản Phẩm</th>
                                        <th>Trạng Thái</th>
                                        <th>Ngày Tạo</th>
                                        <th>Hành Động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transfer in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>#@transfer.id</strong>
                                            </td>
                                            <td>@transfer.warehouse.name</td>
                                            <td>@transfer.branch.name</td>
                                            <td>
                                                <span class="badge badge-secondary">
                                                    @transfer.warehouse_transfer_details.Count() SP
                                                </span>
                                            </td>
                                            <td>
                                                @switch (transfer.status)
                                                {
                                                    case "Requested":
                                                        <span class="badge badge-info">Yêu Cầu</span>
                                                        break;
                                                    case "Approved":
                                                        <span class="badge badge-primary">Đã Duyệt</span>
                                                        break;
                                                    case "pending":
                                                        <span class="badge badge-warning">Chờ Xuất</span>
                                                        break;
                                                    case "shipping":
                                                        <span class="badge badge-primary">Đang Chuyển</span>
                                                        break;
                                                    case "Completed":
                                                    case "completed":
                                                        <span class="badge badge-success">Hoàn Thành</span>
                                                        break;
                                                    case "Rejected":
                                                        <span class="badge badge-danger">Từ Chối</span>
                                                        break;
                                                    case "cancelled":
                                                        <span class="badge badge-secondary">Đã Hủy</span>
                                                        break;
                                                    default:
                                                        <span class="badge badge-secondary">@transfer.status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@(transfer.created_at.HasValue ? transfer.created_at.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = transfer.id })" 
                                                   class="btn btn-sm btn-info">
                                                    <i class="fa fa-eye"></i> Xem
                                                </a>
                                                @if (transfer.status == "pending")
                                                {
                                                    <button class="btn btn-sm btn-success btn-auto-deliver" 
                                                            data-id="@transfer.id">
                                                        <i class="fa fa-truck"></i> Giao Nhanh
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <p class="text-muted">
                                Tổng: <strong>@Model.Count()</strong> phiếu chuyển kho
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function() {
        // Auto Deliver button click
        $('.btn-auto-deliver').click(function() {
            var transferId = $(this).data('id');
            var button = $(this);
            
            if (!confirm('Giao hàng ngay lập tức?\n\nHàng sẽ tự động xuất kho và được giao thành công đến chi nhánh.')) {
                return;
            }
            
            button.prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> Đang xử lý...');
            
            $.ajax({
                url: '@Url.Action("AutoDeliver")',
                type: 'POST',
                data: { id: transferId, autoComplete: true },
                success: function(response) {
                    if (response.success) {
                        alert(response.message);
                        location.reload();
                    } else {
                        alert('Lỗi: ' + response.message);
                        button.prop('disabled', false).html('<i class="fa fa-truck"></i> Giao Nhanh');
                    }
                },
                error: function() {
                    alert('Lỗi kết nối server!');
                    button.prop('disabled', false).html('<i class="fa fa-truck"></i> Giao Nhanh');
                }
            });
        });
    });
</script>
}
