@model Ltwhqt.ViewModels.Admin.ProductManagementViewModel
@{
    ViewBag.Title = "Chi tiết sản phẩm";
}

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <h2 class="h5 mb-1">@Model.Name</h2>
        <p class="text-secondary mb-0">Danh mục: @Model.Category • Nhà cung cấp: @Model.Supplier</p>
        <div class="mt-3">
            <span class="badge bg-light text-dark text-uppercase">@Model.Status</span>
            <span class="ms-2 text-secondary">Cập nhật @Model.UpdatedAt:dd/MM HH:mm</span>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
        <h3 class="h6 mb-0">Biến thể</h3>
        <a class="btn btn-sm btn-primary" href="@Url.Action("Create", "ProductVariants", new { productId = Model.Id })">Thêm biến thể</a>
    </div>
    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead>
                <tr>
                    <th>SKU</th>
                    <th>Tên</th>
                    <th>Giá bán</th>
                    <th>Tồn kho</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var variant in Model.Variants)
                {
                    <tr>
                        <td>@variant.Sku</td>
                        <td>@variant.Name</td>
                        <td>@variant.Price.ToString("c0")</td>
                        <td>@variant.QuantityOnHand</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-light" href="@Url.Action("Edit", "ProductVariants", new { id = variant.Id })">Sửa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
