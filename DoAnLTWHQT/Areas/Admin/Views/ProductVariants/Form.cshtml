@model Ltwhqt.ViewModels.Admin.ProductVariantFormViewModel
@{
    ViewBag.Title = ViewBag.Title ?? "Biến thể sản phẩm";
}

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <h2 class="h5 mb-4">@ViewBag.Title - @ViewBag.ProductName</h2>
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        
        @using (Html.BeginForm(Model.Id.HasValue ? "Edit" : "Create", "ProductVariants", FormMethod.Post, new { @class = "needs-validation", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            @Html.HiddenFor(m => m.ProductId)
            @Html.HiddenFor(m => m.ImageUrl)
            
            <div class="row g-3">
                <div class="col-md-12">
                    <label class="form-label">Tên biến thể <span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Ví dụ: Size 40, Màu Đỏ, XL, ...", required = "required" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        SKU sẽ tự động được tạo từ tên biến thể (VD: "Size 40" → "P0001-SIZE-40")
                    </small>
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Giá bán <span class="text-danger">*</span></label>
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", step = "1000", min = "0", required = "required" })
                        <span class="input-group-text">đ</span>
                    </div>
                    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Giá gốc (tùy chọn)</label>
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.OriginalPrice, new { @class = "form-control", type = "number", step = "1000", min = "0", placeholder = "Để hiển thị giá gạch ngang" })
                        <span class="input-group-text">đ</span>
                    </div>
                    @Html.ValidationMessageFor(m => m.OriginalPrice, "", new { @class = "text-danger" })
                </div>
                
                <div class="col-12">
                    <label class="form-label">Hình ảnh sản phẩm</label>
                    <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" onchange="previewImage(this)" />
                    <small class="text-muted">JPG, PNG, GIF (tối đa 5MB)</small>
                </div>
                
                @* Preview existing or new image *@
                <div class="col-12">
                    <div class="image-preview-container">
                        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                        {
                            <div class="mb-2">
                                <label class="form-label">Ảnh hiện tại:</label>
                                <div>
                                    <img id="currentImage" src="@Model.ImageUrl" class="img-thumbnail" style="max-width: 200px; max-height: 200px; object-fit: cover;" alt="Current" />
                                </div>
                            </div>
                        }
                        <div id="imagePreview" style="display:none;">
                            <label class="form-label">Ảnh mới (xem trước):</label>
                            <div>
                                <img id="preview" src="#" class="img-thumbnail" style="max-width: 200px; max-height: 200px; object-fit: cover;" alt="Preview" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="d-flex justify-content-end gap-2 mt-4">
                <a class="btn btn-light" href="@Url.Action("Index", new { productId = Model.ProductId })">
                    <i class="bi bi-x-lg me-2"></i>Huỷ
                </a>
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-save me-2"></i>Lưu biến thể
                </button>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                // Validate file size (5MB)
                if (input.files[0].size > 5 * 1024 * 1024) {
                    ModalPopup.warning('File quá lớn!', 'Kích thước file không được vượt quá 5MB');
                    input.value = '';
                    return;
                }
                
                // Validate file type
                var allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
                if (!allowedTypes.includes(input.files[0].type)) {
                    ModalPopup.warning('Định dạng không hợp lệ!', 'Chỉ chấp nhận file ảnh: JPG, PNG, GIF');
                    input.value = '';
                    return;
                }
                
                var reader = new FileReader();
                
                reader.onload = function(e) {
                    document.getElementById('preview').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                    
                    // Dim current image if exists
                    var currentImg = document.getElementById('currentImage');
                    if (currentImg) {
                        currentImg.style.opacity = '0.4';
                    }
                }
                
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
