@model IEnumerable<Ltwhqt.ViewModels.Admin.ReportIndicatorViewModel>
@{
    ViewBag.Title = "Báo cáo KPI";
}

@section Styles {
    <style>
        .kpi-card {
            transition: transform 0.2s;
            border-left: 4px solid #0d6efd; /* Tạo điểm nhấn màu xanh bên trái */
        }

            .kpi-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
            }
    </style>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h4 mb-1">
            <i class="bi bi-graph-up-arrow me-2"></i>Báo cáo KPI
        </h2>
        <p class="text-secondary mb-0">Tổng hợp các chỉ số hiệu suất quan trọng (Xem trước)</p>
    </div>

    <a href="@Url.Action("ExportToExcel")" class="btn btn-success shadow-sm">
        <i class="bi bi-file-earmark-spreadsheet me-2"></i>Xuất báo cáo Excel
    </a>
</div>

<div class="row g-4">
    @foreach (var indicator in Model)
    {
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 kpi-card">
                <div class="card-body">
                    <p class="text-secondary text-uppercase small mb-1 fw-bold">@indicator.Label</p>

                    <h3 class="mb-0 fw-bold">@indicator.Value</h3>

                    <div class="mt-2 @(indicator.Trend.Contains("+") ? "text-success" : "text-danger")">
                        <i class="bi @(indicator.Trend.Contains("+") ? "bi-arrow-up" : "bi-arrow-down")"></i>
                        @indicator.Trend
                    </div>

                    <p class="text-secondary small mb-0 mt-2">@indicator.Description</p>
                </div>
            </div>
        </div>
    }
</div>