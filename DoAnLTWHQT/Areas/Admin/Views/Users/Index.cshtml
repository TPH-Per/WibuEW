@model IEnumerable<Ltwhqt.ViewModels.Admin.UserListItemViewModel>
@{
    ViewBag.Title = "Quản lý tài khoản";
    var roleFilter = ViewBag.RoleFilter as string ?? "all";
    var statusFilter = ViewBag.StatusFilter as string ?? "all";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h4 mb-1">Tài khoản &amp; phân quyền</h2>
        <p class="text-secondary mb-0">Xem và quản lý users theo role/status.</p>
    </div>
    <a class="btn btn-primary" href="@Url.Action("Create")">
        <i class="bi bi-plus-lg me-2"></i>Thêm tài khoản
    </a>
</div>

<form class="row g-3 mb-4">
    <div class="col-md-3">
        <label class="form-label">Role</label>
        <select class="form-select" name="role" onchange="this.form.submit()">
            <option value="all" @(roleFilter == "all" ? "selected" : null)>Tất cả</option>
            <option value="admin" @(roleFilter == "admin" ? "selected" : null)>Admin</option>
            <option value="warehouse_manager" @(roleFilter == "warehouse_manager" ? "selected" : null)>Warehouse</option>
            <option value="branch_manager" @(roleFilter == "branch_manager" ? "selected" : null)>Branch</option>
            <option value="client" @(roleFilter == "client" ? "selected" : null)>Khách hàng</option>
        </select>
    </div>
    <div class="col-md-3">
        <label class="form-label">Trạng thái</label>
        <select class="form-select" name="status" onchange="this.form.submit()">
            <option value="all" @(statusFilter == "all" ? "selected" : null)>Tất cả</option>
            <option value="active" @(statusFilter == "active" ? "selected" : null)>Đang hoạt động</option>
            <option value="inactive" @(statusFilter == "inactive" ? "selected" : null)>Đã khóa</option>
        </select>
    </div>
</form>

<div class="card border-0 shadow-sm">
    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tài khoản</th>
                    <th>Liên hệ</th>
                    <th>Role</th>
                    <th>Trạng thái</th>
                    <th>Thuộc kho/chi nhánh</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>
                            <div class="fw-semibold">@user.FullName</div>
                            <small class="text-secondary">@user.Name</small>
                        </td>
                        <td>
                            <div>@user.Email</div>
                            <small class="text-secondary">@user.PhoneNumber</small>
                        </td>
                        <td><span class="badge bg-light text-dark text-uppercase">@user.Role</span></td>
                        <td>
                            <span class="badge @(user.Status == "active" ? "bg-success-subtle text-success" : "bg-danger-subtle text-danger")">
                                @user.Status
                            </span>
                        </td>
                        <td>
                            @(string.IsNullOrWhiteSpace(user.BranchName) ? user.WarehouseName : user.BranchName)
                        </td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Details", new { id = user.Id })">Chi tiết</a>
                            <a class="btn btn-sm btn-light ms-1" href="@Url.Action("Edit", new { id = user.Id })">Sửa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
