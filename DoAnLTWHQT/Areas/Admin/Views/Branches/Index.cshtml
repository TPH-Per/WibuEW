@model IEnumerable<Ltwhqt.ViewModels.Admin.BranchViewModel>
@{
    ViewBag.Title = "Danh sách chi nhánh";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h4 mb-1 fw-bold">Hệ thống chi nhánh</h2>
        <p class="text-secondary mb-0">Quản lý danh sách các cửa hàng và kho chi nhánh.</p>
    </div>
    <a class="btn btn-primary px-3 shadow-sm" href="@Url.Action("Create")">
        <i class="bi bi-plus-lg me-2"></i>Thêm chi nhánh
    </a>
</div>

<div class="card border-0 shadow-sm rounded-3">
    <div class="table-responsive">
        <table class="table align-middle mb-0 table-hover">
            <thead class="bg-light">
                <tr>
                    <th class="text-center py-3" style="width: 60px;">STT</th> <th class="py-3">Tên chi nhánh</th>
                    <th class="py-3">Địa chỉ</th>
                    <th class="py-3">Quản lý</th>
                    <th class="text-end py-3 pe-4">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int i = 1; // KHỞI TẠO BIẾN ĐẾM STT
                    foreach (var branch in Model)
                    {
                        <tr>
                            <td class="text-center text-muted fw-bold">@(i++)</td>
                            
                            <td>
                                <span class="fw-semibold text-primary">@branch.Name</span>
                            </td>
                            
                            
                            <td>@branch.Location</td>
                            
                            <td>
                                @if (!string.IsNullOrEmpty(branch.Manager) && branch.Manager != "Chưa gán")
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center me-2" style="width: 28px; height: 28px;">
                                            <i class="bi bi-person-fill text-primary" style="font-size: 14px;"></i>
                                        </div>
                                        <span>@branch.Manager</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary fw-normal px-3">Chưa gán</span>
                                }
                            </td>
                            
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-light text-primary border" href="@Url.Action("Edit", new { id = branch.Id })" title="Chỉnh sửa">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    
                                    @using (Html.BeginForm("Delete", "Branches", new { id = branch.Id }, FormMethod.Post, new { @class = "d-inline", onsubmit = "return confirm('Bạn có chắc muốn xóa chi nhánh \"" + branch.Name + "\" không? Hành động này không thể hoàn tác!');" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-light text-danger border border-start-0" title="Xóa bỏ">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-5">
                            <div class="mb-3">
                                <i class="bi bi-shop display-1 text-light"></i>
                            </div>
                            <p class="mb-2 fw-medium">Chưa có dữ liệu chi nhánh</p>
                            <a href="@Url.Action("Create")" class="btn btn-sm btn-outline-primary mt-2">
                                <i class="bi bi-plus-circle me-1"></i>Thêm mới ngay
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>