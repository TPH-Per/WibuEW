@model IEnumerable<DoAnLTWHQT.discount>
@{
    ViewBag.Title = "Mã giảm giá";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h4 mb-1">Chiến dịch Discounts</h2>
        <p class="text-secondary mb-0">Quản lý các mã giảm giá tiền mặt trực tiếp.</p>
    </div>
    <a class="btn btn-primary" href="@Url.Action("Create")">
        <i class="bi bi-plus-lg me-2"></i>Thêm mã mới
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card border-0 shadow-sm">
    <div class="table-responsive">
        @if (Model.Any())
        {
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Mã Code</th>
                        <th>Giá trị giảm</th>
                        <th>Lượt dùng</th>
                        <th>Trạng thái</th>
                        <th>Hiệu lực</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var discount in Model)
                    {
                        <tr class="@(discount.is_active ? "" : "text-muted")">
                            <td>@discount.id</td>
                            <td class="fw-semibold">@discount.code</td>
                            <td>@discount.value.ToString("N0") ₫</td>
                            <td>@discount.used_count / @(discount.max_uses ?? 0)</td>
                            <td>
                                @if (discount.is_active)
                                {
                                    <span class="badge bg-success">Đang hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Tạm ngừng</span>
                                }
                            </td>
                            <td>
                                @(discount.start_at?.ToString("dd/MM/yyyy") ?? "N/A") - @(discount.end_at?.ToString("dd/MM/yyyy") ?? "N/A")
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary me-1" href="@Url.Action("Edit", new { id = discount.id })">
                                    <i class="bi bi-pencil"></i> Sửa
                                </a>
                                @using (Html.BeginForm("Delete", "Discounts", new { id = discount.id }, FormMethod.Post, new { style = "display:inline", id = "deleteForm_" + discount.id }))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="button" class="btn btn-sm btn-outline-danger" data-confirm-delete="deleteForm_@discount.id" data-confirm-message="Bạn có chắc chắn muốn xóa mã này?">
                                        <i class="bi bi-trash"></i> Xóa
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center p-5">
                <i class="bi bi-tag fs-1 text-muted"></i>
                <p class="text-muted mt-3">Chưa có mã giảm giá nào.</p>
                <a class="btn btn-primary" href="@Url.Action("Create")">
                    <i class="bi bi-plus-lg me-2"></i>Tạo mã đầu tiên
                </a>
            </div>
        }
    </div>
</div>
