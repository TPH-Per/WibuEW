@model IEnumerable<DoAnLTWHQT.discount>
@{
    ViewBag.Title = "Quản lý Voucher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h4 mb-1 fw-bold">Chiến dịch Discounts</h2>
        <p class="text-secondary mb-0">Quản lý các mã giảm giá tiền mặt trực tiếp.</p>
    </div>
    <a class="btn btn-primary shadow-sm" href="@Url.Action("Create")">
        <i class="bi bi-plus-lg me-2"></i>Thêm mã mới
    </a>
</div>

<div class="card border-0 shadow-sm rounded-3">
    <div class="table-responsive">
        <table class="table align-middle mb-0 table-hover">
            <thead class="bg-light">
                <tr>
                    <th class="text-center py-3" style="width: 50px;">STT</th>
                    <th class="py-3">Mã Code</th>
                    <th class="py-3 text-end">Giá trị giảm</th>
                    <th class="py-3 text-center">Lượt dùng</th>
                    <th class="py-3">Thời gian hiệu lực</th>
                    <th class="py-3 text-center">Trạng thái</th>
                    <th class="text-end py-3 pe-4">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int i = 1;
                    foreach (var item in Model)
                    {
                        /* Kiểm tra xem mã có hết hạn chưa để đổi màu dòng */
                        bool isExpired = item.end_at.HasValue && item.end_at.Value < DateTime.Now;
                        string rowClass = isExpired ? "bg-light text-muted" : "";

                        <tr class="@rowClass">
                            <td class="text-center text-muted fw-bold">@(i++)</td>

                            <td>
                                <span class="fw-bold text-primary text-uppercase">@item.code</span>
                                @if (isExpired)
                                {
                                    <span class="badge bg-danger ms-2" style="font-size: 0.7em;">Hết hạn</span>
                                }
                            </td>

                            <td class="text-end fw-bold text-success">
                                @String.Format("{0:N0}", item.value) ₫
                            </td>

                            <td class="text-center">
                                <span class="fw-bold">@item.used_count</span>
                                <span class="text-muted small">/ @(item.max_uses.HasValue ? item.max_uses.ToString() : "∞")</span>
                            </td>

                            <td>
                                <div class="small">
                                    <i class="bi bi-calendar-check me-1 text-muted"></i>
                                    @(item.start_at.HasValue ? item.start_at.Value.ToString("dd/MM/yyyy") : "--")
                                </div>
                                <div class="small">
                                    <i class="bi bi-calendar-x me-1 text-muted"></i>
                                    @(item.end_at.HasValue ? item.end_at.Value.ToString("dd/MM/yyyy") : "Vô thời hạn")
                                </div>
                            </td>

                            <td class="text-center">
                                @if (item.is_active && !isExpired)
                                {
                                    <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-3">Hoạt động</span>
                                }
                                else if (!item.is_active)
                                {
                                    <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill px-3">Đang tắt</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill px-3">Hết hạn</span>
                                }
                            </td>

                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-light text-primary border" href="@Url.Action("Edit", new { id = item.id })" title="Sửa">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    @using (Html.BeginForm("Delete", "Discounts", new { id = item.id }, FormMethod.Post, new { @class = "d-inline", onsubmit = "return confirm('Bạn có chắc muốn xóa vĩnh viễn mã [" + item.code + "] không?');" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-light text-danger border border-start-0" title="Xóa">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center py-5 text-muted">
                            <i class="bi bi-ticket-perforated display-6 d-block mb-3 text-secondary opacity-50"></i>
                            <p class="mb-1">Chưa có mã giảm giá nào.</p>
                            <a href="@Url.Action("Create")" class="btn btn-sm btn-outline-primary mt-2">Tạo mã đầu tiên</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>