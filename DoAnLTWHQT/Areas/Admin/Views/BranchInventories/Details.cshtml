@model IEnumerable<Ltwhqt.ViewModels.Admin.BranchInventoryViewModel>
@{
    ViewBag.Title = "Chi tiết tồn kho - " + ViewBag.BranchName;
}

<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="h4 mb-1">Tồn kho: @ViewBag.BranchName</h2>
            <p class="text-secondary mb-0">Chi tiết tồn kho tại chi nhánh này</p>
        </div>
        <div>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead>
                <tr>
                    <th>Sản phẩm / Variant</th>
                    <th>Tồn hiện tại</th>
                    <th>Đang giữ</th>
                    <th>Có thể bán</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Variant</td>
                        <td>@item.QuantityOnHand</td>
                        <td>@item.QuantityReserved</td>
                        <td>
                            <strong>@(item.QuantityOnHand - item.QuantityReserved)</strong>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
