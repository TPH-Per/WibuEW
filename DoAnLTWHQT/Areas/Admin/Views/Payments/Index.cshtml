@model IEnumerable<Ltwhqt.ViewModels.Admin.PaymentManagementViewModel>
@{
    ViewBag.Title = "Thanh toán";
    var statusFilter = ViewBag.StatusFilter as string ?? "all";
}

<div class="mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h2 class="h4 mb-1">Theo dõi thanh toán</h2>
        <p class="text-secondary mb-0">COD, VNPay, đặt cọc.</p>
    </div>
    <form method="get">
        <select class="form-select" name="status" onchange="this.form.submit()">
            <option value="all" @(statusFilter == "all" ? "selected" : null)>Tất cả</option>
            <option value="pending" @(statusFilter == "pending" ? "selected" : null)>Pending</option>
            <option value="completed" @(statusFilter == "completed" ? "selected" : null)>Completed</option>
            <option value="deposit" @(statusFilter == "deposit" ? "selected" : null)>Deposit</option>
        </select>
    </form>
</div>

<div class="card border-0 shadow-sm">
    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead>
                <tr>
                    <th>Mã payment</th>
                    <th>Đơn hàng</th>
                    <th>Phương thức</th>
                    <th>Số tiền</th>
                    <th>Trạng thái</th>
                    <th>Ngày tạo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var payment in Model)
                {
                    <tr>
                        <td>#@payment.Id</td>
                        <td>@payment.OrderCode</td>
                        <td>@payment.Method</td>
                        <td>@payment.Amount.ToString("c0")</td>
                        <td><span class="badge bg-light text-dark text-uppercase">@payment.Status</span></td>
                        <td>@payment.CreatedAt:dd/MM HH:mm</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Details", new { id = payment.Id })">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
