@model IEnumerable<Ltwhqt.ViewModels.Admin.WarehouseTransferViewModel>
@{
    ViewBag.Title = "Phiếu xuất kho";
    var statusFilter = ViewBag.StatusFilter as string ?? "all";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h4 mb-1">Chuyên hàng sang chi nhánh</h2>
        <p class="text-secondary mb-0">Giảm tồn kho kho trung tâm, theo dõi trạng thái nhận.</p>
    </div>
    <a class="btn btn-primary" href="@Url.Action("Create")">
        <i class="bi bi-plus-lg me-2"></i>Tạo phiếu xuất
    </a>
</div>

<form method="get" class="row g-3 mb-3">
    <div class="col-md-3">
        <label class="form-label">Trạng thái</label>
        <select class="form-select" name="status" onchange="this.form.submit()">
            <option value="all" @(statusFilter == "all" ? "selected" : null)>Tất cả</option>
            <option value="pending" @(statusFilter == "pending" ? "selected" : null)>Pending</option>
            <option value="transferred" @(statusFilter == "transferred" ? "selected" : null)>Đã xuất</option>
            <option value="received" @(statusFilter == "received" ? "selected" : null)>Chi nhánh đã nhận</option>
        </select>
    </div>
</form>

<div class="card border-0 shadow-sm">
    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead>
                <tr>
                    <th>Mã</th>
                    <th>Từ kho</th>
                    <th>Đến chi nhánh</th>
                    <th>Variant</th>
                    <th>Số lượng</th>
                    <th>Trạng thái</th>
                    <th>Ngày tạo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transfer in Model)
                {
                    <tr>
                        <td>#@transfer.Id</td>
                        <td>@transfer.FromWarehouse</td>
                        <td>@transfer.ToBranch</td>
                        <td>@transfer.Variant</td>
                        <td>@transfer.Quantity</td>
                        <td><span class="badge bg-light text-dark text-uppercase">@transfer.Status</span></td>
                        <td>@transfer.CreatedAt:dd/MM HH:mm</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Details", new { id = transfer.Id })">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
