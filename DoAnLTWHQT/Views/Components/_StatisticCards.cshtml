@using System.Linq
@model IEnumerable<Ltwhqt.ViewModels.Shared.StatisticCardViewModel>
@if (Model?.Any() == true)
{
    <div class="row g-4">
        @foreach (var card in Model)
        {
            <div class="col-12 col-md-6 col-xl-3">
                <div class="card stat-card border-0 h-100 @(ViewContext.RouteData.DataTokens["area"]?.ToString().ToLower() == "warehouse" ? "warehouse-stat-card" : ViewContext.RouteData.DataTokens["area"]?.ToString().ToLower() == "branch" ? "branch-stat-card" : "")">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-uppercase text-secondary fw-semibold mb-1 small">@card.Label</p>
                                <h3 class="fw-bold mb-0">@card.Value</h3>
                                @if (!string.IsNullOrWhiteSpace(card.SubLabel))
                                {
                                    <small class="text-secondary">@card.SubLabel</small>
                                }
                            </div>
                            <span class="badge bg-@card.Context">
                                <i class="bi @card.Icon"></i>
                            </span>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(card.Trend))
                        {
                            <div class="mt-3 text-success">
                                <i class="bi bi-arrow-up-right"></i> @card.Trend
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
