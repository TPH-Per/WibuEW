@{
    ViewBag.Title = "POS Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assumes standard layout
}

<div class="row">
    <!-- Left Column: Product Search & List -->
    <div class="col-md-7">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h4 class="m-0"><i class="fa fa-search"></i> Tìm kiếm sản phẩm</h4>
            </div>
            <div class="card-body">
                <div class="input-group mb-3">
                    <input type="text" id="productSearch" class="form-control form-control-lg" placeholder="Nhập tên sản phẩm hoặc SKU..." autocomplete="off">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button"><i class="fa fa-search"></i></button>
                    </div>
                </div>
                <div id="searchResults" class="list-group" style="max-height: 400px; overflow-y: auto;">
                    <!-- Results will be injected here -->
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column: Cart & Checkout -->
    <div class="col-md-5">
        <div class="card shadow-lg">
            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                <h4 class="m-0"><i class="fa fa-shopping-cart"></i> Giỏ hàng</h4>
                <span id="cartCount" class="badge badge-light">0 items</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive" style="height: 400px; overflow-y: auto;">
                    <table class="table table-striped mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>Sản phẩm</th>
                                <th width="120">SL</th>
                                <th class="text-right">Giá</th>
                                <th width="50"></th>
                            </tr>
                        </thead>
                        <tbody id="cartTableBody">
                            <!-- Cart items -->
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-white">
                <div class="d-flex justify-content-between mb-2">
                    <h5>Tổng tiền:</h5>
                    <h3 class="text-danger" id="totalAmount">0 ₫</h3>
                </div>
                
                <div class="form-group">
                    <label>Phương thức thanh toán:</label>
                    @Html.DropDownList("PaymentMethodID", (SelectList)ViewBag.PaymentMethods, new { @class = "form-control", @id = "paymentMethod" })
                </div>

                <div class="row">
                    <div class="col-6">
                        <button id="btnCancel" class="btn btn-secondary btn-block">Hủy</button>
                    </div>
                    <div class="col-6">
                        <button id="btnCheckout" class="btn btn-success btn-lg btn-block">
                            <i class="fa fa-check-circle"></i> THANH TOÁN
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden Fields for Context -->
<input type="hidden" id="currentBranchId" value="@ViewBag.CurrentBranchID" />
<input type="hidden" id="currentUserId" value="@ViewBag.CurrentUserID" />

@section Scripts {
    <script>
        $(document).ready(function () {
            var cart = [];
            var typingTimer;
            
            // Format currency
            function formatVND(n) {
                return n.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
            }

            // Search Logic
            $('#productSearch').on('input', function () {
                var query = $(this).val();
                clearTimeout(typingTimer);
                if (query.length < 2) {
                    $('#searchResults').empty();
                    return;
                }

                typingTimer = setTimeout(function () {
                    $.get('/POS/SearchProducts', { query: query }, function (data) {
                        var html = '';
                        if(data.length === 0) {
                            html = '<div class="text-center p-3 text-muted">Không tìm thấy sản phẩm</div>';
                        } else {
                            data.forEach(function (p) {
                                var stockBadge = p.stock > 0 ? '<span class="badge badge-success">Sẵn hàng: ' + p.stock + '</span>' : '<span class="badge badge-danger">Hết hàng</span>';
                                html += '<a href="#" class="list-group-item list-group-item-action product-item" data-id="' + p.id + '" data-name="' + p.name + '" data-price="' + p.price + '">' +
                                        '<div class="d-flex w-100 justify-content-between">' +
                                        '<h5 class="mb-1">' + p.name + ' - ' + p.sku + '</h5>' +
                                        '<small>' + formatVND(p.price) + '</small>' +
                                        '</div>' +
                                        '<p class="mb-1">' + stockBadge + '</p>' +
                                        '</a>';
                            });
                        }
                        $('#searchResults').html(html);
                    });
                }, 300);
            });

            // Add to Cart
            $(document).on('click', '.product-item', function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                var name = $(this).data('name');
                var price = $(this).data('price');

                var existing = cart.find(x => x.VariantID == id);
                if (existing) {
                    existing.Qty++;
                } else {
                    cart.push({ VariantID: id, Name: name, Price: price, Qty: 1 });
                }
                renderCart();
                // Clear search
                $('#productSearch').val('');
                $('#searchResults').empty();
                $('#productSearch').focus();
            });

            // Remove from Cart
            $(document).on('click', '.remove-item', function () {
                var id = $(this).data('id');
                cart = cart.filter(x => x.VariantID != id);
                renderCart();
            });

            // Change Qty logic if needed (adding simple input handler)
            $(document).on('change', '.qty-input', function() {
                 var id = $(this).data('id');
                 var val = parseInt($(this).val());
                 if(val < 1) val = 1;
                 
                 var item = cart.find(x => x.VariantID == id);
                 if(item) {
                     item.Qty = val;
                     renderCart();
                 }
            });

            function renderCart() {
                var html = '';
                var total = 0;
                var count = 0;

                cart.forEach(function (item) {
                    var subtotal = item.Qty * item.Price;
                    total += subtotal;
                    count += item.Qty;
                    html += '<tr>' +
                            '<td>' + item.Name + '</td>' +
                            '<td><input type="number" class="form-control form-control-sm qty-input" value="' + item.Qty + '" data-id="' + item.VariantID + '" min="1"></td>' +
                            '<td class="text-right">' + formatVND(subtotal) + '</td>' +
                            '<td><button class="btn btn-sm btn-danger remove-item" data-id="' + item.VariantID + '">&times;</button></td>' +
                            '</tr>';
                });

                $('#cartTableBody').html(html);
                $('#totalAmount').text(formatVND(total));
                $('#cartCount').text(count + ' items');
            }

            // Checkout
            $('#btnCheckout').click(function () {
                if (cart.length === 0) {
                    ModalPopup.warning('Giỏ hàng trống!', 'Vui lòng thêm sản phẩm vào giỏ hàng trước khi thanh toán.');
                    return;
                }

                ModalPopup.confirm({
                    type: 'question',
                    title: 'Xác nhận thanh toán?',
                    message: 'Bạn có chắc chắn muốn thanh toán đơn hàng này?',
                    confirmText: 'Thanh toán',
                    cancelText: 'Hủy',
                    confirmClass: 'btn-success',
                    onConfirm: function() {
                        ModalPopup.showLoading('Đang xử lý thanh toán...');
                        
                        var data = {
                            branchId: $('#currentBranchId').val(),
                            userId: $('#currentUserId').val(),
                            paymentMethodId: $('#paymentMethod').val(),
                            cartItems: cart.map(function(i) { return { VariantID: i.VariantID, Qty: i.Qty }; })
                        };

                        $.ajax({
                            url: '/POS/Checkout',
                            type: 'POST',
                            contentType: 'application/json',
                            data: JSON.stringify(data),
                            success: function (res) {
                                ModalPopup.hideLoading();
                                if (res.success) {
                                    ModalPopup.success('Thành công!', res.message, function() {
                                        cart = [];
                                        renderCart();
                                    });
                                } else {
                                    ModalPopup.error('Lỗi!', res.message);
                                }
                            },
                            error: function () {
                                ModalPopup.hideLoading();
                                ModalPopup.error('Lỗi kết nối!', 'Lỗi kết nối server!');
                            }
                        });
                    }
                });
            });

            $('#btnCancel').click(function() {
                ModalPopup.confirm({
                    type: 'warning',
                    title: 'Hủy giao dịch?',
                    message: 'Bạn có chắc muốn hủy giao dịch hiện tại? Tất cả sản phẩm trong giỏ hàng sẽ bị xóa.',
                    confirmText: 'Hủy giao dịch',
                    cancelText: 'Quay lại',
                    confirmClass: 'btn-danger',
                    onConfirm: function() {
                        cart = [];
                        renderCart();
                        Toast.info('Đã hủy giao dịch');
                    }
                });
            });
        });
    </script>
}
