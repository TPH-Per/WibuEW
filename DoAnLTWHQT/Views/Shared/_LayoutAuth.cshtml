<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(ViewBag.Title ?? "Đăng nhập hệ thống PERW")</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
    <style>
        body {
            min-height: 100vh;
            background: radial-gradient(circle at top, #133f8e, #0b1f3a);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }

        .auth-card {
            max-width: 450px;
            width: 100%;
            margin: 0 auto;
        }

        /* Responsive card body padding */
        .card-body {
            padding: 2rem 1.5rem !important;
        }

        /* Icon size responsive */
        .auth-icon {
            width: 55px;
            height: 55px;
        }

        /* Heading responsive */
        .auth-heading {
            font-size: 1.5rem;
        }

        .auth-subtitle {
            font-size: 0.9rem;
        }

        /* Form control sizes */
        .form-control-lg {
            font-size: 1rem;
            padding: 0.75rem 1rem;
        }

        /* Button responsive */
        .btn-lg {
            font-size: 1rem;
            padding: 0.75rem 1.5rem;
        }

        /* Small screens (phones in portrait) */
        @@media (max-width: 575.98px) {
            body {
                padding: 0.75rem;
            }

            .card-body {
                padding: 1.5rem 1rem !important;
            }

            .auth-icon {
                width: 50px;
                height: 50px;
            }

            .auth-heading {
                font-size: 1.25rem;
            }

            .auth-subtitle {
                font-size: 0.85rem;
            }

            .form-control-lg {
                font-size: 0.95rem;
                padding: 0.65rem 0.85rem;
            }

            .btn-lg {
                font-size: 0.95rem;
                padding: 0.65rem 1.25rem;
            }

            .alert {
                font-size: 0.85rem;
                padding: 0.75rem 1rem;
            }
        }

        /* Medium screens (tablets) */
        @@media (min-width: 576px) and (max-width: 767.98px) {
            .card-body {
                padding: 2rem 1.75rem !important;
            }
        }

        /* Large screens (desktop) */
        @@media (min-width: 768px) {
            body {
                padding: 2rem;
            }

            .card-body {
                padding: 2.5rem 2rem !important;
            }

            .auth-icon {
                width: 60px;
                height: 60px;
            }

            .auth-heading {
                font-size: 1.75rem;
            }

            .auth-subtitle {
                font-size: 1rem;
            }
        }

        /* Extra large screens */
        @@media (min-width: 992px) {
            .auth-card {
                max-width: 480px;
            }

            .card-body {
                padding: 3rem 2.5rem !important;
            }
        }

        /* Accessibility - focus states */
        .form-control:focus,
        .form-check-input:focus,
        .btn:focus {
            box-shadow: 0 0 0 0.25rem rgba(19, 63, 142, 0.25);
        }

        /* Smooth transitions */
        .form-control,
        .btn {
            transition: all 0.2s ease-in-out;
        }
    </style>
</head>
<body>
    <main class="auth-card">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
