@model Ltwhqt.ViewModels.Branch.BranchPreOrderViewModel
@{
    ViewBag.Title = "Chi tiết Pre-order";
}

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <div>
                <h2 class="h5 mb-1">@Model.OrderCode</h2>
                <p class="text-secondary mb-0">@Model.Customer • @Model.PickupDateLabel</p>
            </div>
            <div class="text-end">
                <span class="badge bg-light text-dark text-uppercase">@Model.Status</span>
                <div class="fw-semibold mt-2">@Model.DepositAmount.ToString("c0")</div>
            </div>
        </div>
    </div>
    <ul class="list-group list-group-flush">
        @foreach (var line in Model.Lines)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <div class="fw-semibold">@line.ProductName</div>
                    <small class="text-secondary">@line.VariantName</small>
                </div>
                <span>x @line.Quantity</span>
            </li>
        }
    </ul>
    <div class="card-footer bg-white border-0 d-flex justify-content-end gap-2">
        <button class="btn btn-outline-danger">Huỷ đơn</button>
        <button class="btn btn-primary">Hoàn tất &amp; trừ tồn</button>
    </div>
</div>
