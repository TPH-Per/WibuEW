@model Ltwhqt.ViewModels.Branch.BranchOrderDetailViewModel
@{
    ViewBag.Title = "Chi tiết đơn hàng";
}

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <div>
                <h2 class="h5 mb-1">Order #@Model.Summary.OrderCode</h2>
                <p class="text-secondary mb-0">Khách: @Model.Summary.Customer • Kênh: @Model.Summary.Channel</p>
            </div>
            <div class="text-end">
                <span class="badge bg-light text-dark text-uppercase">@Model.Summary.Status</span>
                <div class="fw-semibold mt-2">@Model.Summary.TotalAmount.ToString("c0")</div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-7">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0">
                <h3 class="h6 mb-0">Sản phẩm</h3>
            </div>
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Variant</th>
                            <th>SL</th>
                            <th>Giá</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var line in Model.Lines)
                        {
                            <tr>
                                <td>@line.ProductName</td>
                                <td>@line.VariantName</td>
                                <td>@line.Quantity</td>
                                <td>@line.UnitPrice.ToString("c0")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-5">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-0">
                <h3 class="h6 mb-0">Thanh toán</h3>
            </div>
            <div class="card-body">
                @if (Model.Payments?.Count > 0)
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var payment in Model.Payments)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-semibold">@payment.Method</div>
                                    <small class="text-secondary">@payment.CreatedAt:dd/MM HH:mm</small>
                                </div>
                                <div class="text-end">
                                    <div>@payment.Amount.ToString("c0")</div>
                                    <span class="badge bg-light text-dark text-uppercase">@payment.Status</span>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="mb-0 text-secondary">Chưa có thanh toán.</p>
                }
            </div>
        </div>
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0">
                <h3 class="h6 mb-0">Giao hàng</h3>
            </div>
            <div class="card-body">
                <p class="mb-0">@Model.ShippingAddress</p>
            </div>
        </div>
    </div>
</div>
