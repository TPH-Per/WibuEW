@model Ltwhqt.ViewModels.Branch.BranchInventoryDetailViewModel
@{
    ViewBag.Title = "Chi tiết tồn kho";
}

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <h2 class="h5 mb-1">@Model.Summary.ProductName</h2>
        <p class="text-secondary mb-0">Variant: @Model.Summary.VariantName</p>
        <div class="d-flex gap-4 mt-3">
            <div>
                <span class="text-secondary small">On hand</span>
                <div class="h4 mb-0">@Model.Summary.QuantityOnHand</div>
            </div>
            <div>
                <span class="text-secondary small">Reserved</span>
                <div class="h4 mb-0">@Model.Summary.QuantityReserved</div>
            </div>
            <div>
                <span class="text-secondary small">Reorder level</span>
                <div class="h4 mb-0">@Model.Summary.ReorderLevel</div>
            </div>
        </div>
        <div class="mt-3">
            <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Adjust", new { variantId = Model.Summary.VariantId })">Điều chỉnh tồn</a>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0">
        <h3 class="h6 mb-0">Phiếu chuyển gần đây</h3>
    </div>
    <div class="table-responsive">
        <table class="table mb-0">
            <thead>
                <tr>
                    <th>Mã</th>
                    <th>Số lượng</th>
                    <th>Trạng thái</th>
                    <th>Ngày</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transfer in Model.RecentTransfers)
                {
                    <tr>
                        <td>#@transfer.Id</td>
                        <td>@transfer.Quantity</td>
                        <td><span class="badge bg-light text-dark text-uppercase">@transfer.Status</span></td>
                        <td>@transfer.CreatedAt:dd/MM</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
