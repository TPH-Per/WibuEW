@model IEnumerable<Ltwhqt.ViewModels.Admin.BranchInventoryViewModel>
@{
    ViewBag.Title = "Chi tiết tồn kho - " + ViewBag.BranchName;
    ViewBag.Breadcrumb = "Chi tiết tồn kho chi nhánh";
}

@section Styles {
    <link href="@Url.Content("~/wwwroot/css/areas/admin-dashboard.css")" rel="stylesheet" />
}

<div class="mb-3">
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white border-0">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="card-title mb-0">@ViewBag.BranchName</h5>
                <small class="text-secondary">
                    <i class="bi bi-geo-alt"></i> @ViewBag.BranchLocation
                </small>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-4">
                <div class="p-3 bg-light rounded">
                    <div class="text-muted small">Tổng SKU</div>
                    <div class="h4 mb-0">@ViewBag.TotalSKU</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 bg-light rounded">
                    <div class="text-muted small">Tổng tồn kho</div>
                    <div class="h4 mb-0">@ViewBag.TotalQuantity</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 bg-warning bg-opacity-10 rounded">
                    <div class="text-muted small">SKU cảnh báo</div>
                    <div class="h4 mb-0 text-warning">@ViewBag.LowStockCount</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0">
        <h5 class="card-title mb-0">Chi tiết tồn kho</h5>
    </div>
    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Biến thể</th>
                            <th class="text-end">Tồn kho</th>
                            <th class="text-end">Đã đặt</th>
                            <th class="text-end">Khả dụng</th>
                            <th class="text-end">Mức cảnh báo</th>
                            <th class="text-center">Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.IsLowStock ? "table-warning" : "")">
                                <td class="fw-semibold">@item.ProductName</td>
                                <td>
                                    <span class="badge bg-light text-dark">@item.VariantName</span>
                                </td>
                                <td class="text-end fw-semibold">@item.QuantityOnHand</td>
                                <td class="text-end text-muted">@item.QuantityReserved</td>
                                <td class="text-end">
                                    <span class="badge @(item.AvailableQuantity > 0 ? "bg-success" : "bg-secondary")">
                                        @item.AvailableQuantity
                                    </span>
                                </td>
                                <td class="text-end text-muted">@item.ReorderLevel</td>
                                <td class="text-center">
                                    @if (item.IsLowStock)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-exclamation-triangle"></i> Cảnh báo
                                        </span>
                                    }
                                    else if (item.AvailableQuantity == 0)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Hết hàng
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Đủ hàng
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="p-5 text-center text-muted">
                <i class="bi bi-inbox display-1"></i>
                <p class="mt-3">Không có dữ liệu tồn kho cho chi nhánh này</p>
            </div>
        }
    </div>
</div>
