@model IEnumerable<Ltwhqt.ViewModels.Admin.BranchInventoryViewModel>
@{
    ViewBag.Title = "Tồn kho Chi nhánh";

    ViewBag.Breadcrumb = "Quản lý tồn kho theo chi nhánh";
}

@section Styles {
    <link href="@Url.Content("~/wwwroot/css/areas/admin-dashboard.css")" rel="stylesheet" />
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="card-title mb-0">Tồn kho Chi nhánh</h5>
                <small class="text-secondary">Danh sách tồn kho tại các chi nhánh</small>
            </div>
            <div>
                <select id="branchFilter" class="form-select form-select-sm" onchange="filterByBranch(this.value)">
                    <option value="">Tất cả chi nhánh</option>
                    @foreach (var branch in ViewBag.Branches as List<SelectListItem>)

                    {
                        <option value="@branch.Value" selected="@branch.Selected">@branch.Text</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model != null && Model.Any())

        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Chi nhánh</th>
                            <th>Sản phẩm</th>
                            <th>Biến thể</th>
                            <th class="text-end">Tồn kho</th>
                            <th class="text-end">Đã đặt</th>
                            <th class="text-end">Khả dụng</th>
                            <th class="text-end">Mức cảnh báo</th>
                            <th class="text-center">Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)

                        {
                            <tr class="@(item.IsLowStock ? "table-warning" : "")">
                                <td>
                                    <a href="@Url.Action("Details", new { id = item.BranchId })" class="text-decoration-none">
                                        @item.BranchName
                                    </a>
                                </td>
                                <td>@item.ProductName</td>
                                <td>
                                    <span class="badge bg-light text-dark">@item.VariantName</span>
                                </td>
                                <td class="text-end fw-semibold">@item.QuantityOnHand</td>
                                <td class="text-end text-muted">@item.QuantityReserved</td>
                                <td class="text-end">
                                    <span class="badge @(item.AvailableQuantity > 0 ? "bg-success" : "bg-secondary")">
                                        @item.AvailableQuantity
                                    </span>
                                </td>
                                <td class="text-end text-muted">@item.ReorderLevel</td>
                                <td class="text-center">
                                    @if (item.IsLowStock)

                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-exclamation-triangle"></i> Cảnh báo
                                        </span>
                                    }

                                    else if (item.AvailableQuantity == 0)

                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Hết hàng
                                        </span>
                                    }

                                    else

                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Đủ hàng
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        else

        {
            <div class="p-5 text-center text-muted">
                <i class="bi bi-inbox display-1"></i>
                <p class="mt-3">Không có dữ liệu tồn kho</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function filterByBranch(branchId) {
            if (branchId) {
                window.location.href = '@Url.Action("Index")?branchId=' + branchId;
            } else {
                window.location.href = '@Url.Action("Index")';
            }
        }
    </script>
}
