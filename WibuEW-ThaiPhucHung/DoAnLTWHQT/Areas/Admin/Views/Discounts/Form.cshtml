@model Ltwhqt.ViewModels.Admin.DiscountFormViewModel
@{
    ViewBag.Title = ViewBag.Title ?? "Thông tin mã giảm giá";
    var isEdit = Model.Id.HasValue && Model.Id > 0;
}

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <h2 class="h5 mb-4">@ViewBag.Title</h2>

        @using (Html.BeginForm("Save", "Discounts", FormMethod.Post, new { @class = "needs-validation" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(false)
                </div>
            }

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Mã Code <span class="text-danger">*</span></label>
                    @if (isEdit)
                    {
                        <input class="form-control" value="@Model.Code" readonly disabled />
                        @Html.HiddenFor(m => m.Code)
                        <small class="text-muted">Không thể sửa mã code sau khi tạo.</small>
                    }
                    else
                    {
                        @Html.TextBoxFor(m => m.Code, new { @class = "form-control", placeholder = "VD: SALE50", required = "required" })
                    }
                    @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <label class="form-label">Giá trị giảm (VNĐ) <span class="text-danger">*</span></label>
                    @if (isEdit)
                    {
                        <input class="form-control" value="@(Model.Value.HasValue ? Model.Value.Value.ToString("N0") : "0")" readonly disabled />
                        @Html.HiddenFor(m => m.Value)
                        <small class="text-muted">Không thể sửa giá trị sau khi tạo.</small>
                    }
                    else
                    {
                        @Html.TextBoxFor(m => m.Value, new { @class = "form-control", type = "number", placeholder = "50000", required = "required", min = "0" })
                    }
                    @Html.ValidationMessageFor(m => m.Value, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <label class="form-label">Số lượt dùng tối đa</label>
                    @Html.TextBoxFor(m => m.MaxUses, new { @class = "form-control", type = "number", placeholder = "100", min = "0" })
                    @Html.ValidationMessageFor(m => m.MaxUses, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <label class="form-label">Trạng thái</label>
                    <div class="form-check form-switch mt-2">
                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
                        <label class="form-check-label">Kích hoạt mã giảm giá</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Ngày bắt đầu</label>
                    <input type="datetime-local" class="form-control" name="StartAt" 
                           value="@(Model.StartAt.HasValue ? Model.StartAt.Value.ToString("yyyy-MM-ddTHH:mm") : "")" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Ngày kết thúc</label>
                    <input type="datetime-local" class="form-control" name="EndAt" 
                           value="@(Model.EndAt.HasValue ? Model.EndAt.Value.ToString("yyyy-MM-ddTHH:mm") : "")" />
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-between">
                <a class="btn btn-light" href="@Url.Action("Index")">
                    <i class="bi bi-arrow-left me-2"></i>Huỷ bỏ
                </a>
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-check-lg me-2"></i>@(isEdit ? "Cập nhật" : "Tạo mã")
                </button>
            </div>
        }
    </div>
</div>
